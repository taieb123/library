{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block pageTitle %}Livres List{% endblock %}


{% block body %}

<div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Livres</h2>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Isbn</th>
                            <th>Prix</th>
                            <th>Date_edition</th>
                            <th>Nbr_examplaire</th>
                            <th>Photo</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for livre in livres %}
                        <tr>
                            <td>{{ livre.id }}</td>
                            <td>{{ livre.titre }}</td>
                            <td>{{ livre.isbn }}</td>
                            <td>{{ livre.prix }}</td>
                            <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
                            <td>{{ livre.nbrExamplaire }}</td>
                            <td>{{ livre.photo }}</td>
                            <td>
                                <a href="{{ path('livre_show', {'id': livre.id}) }}" class="btn btn-info">show</a>
                                <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn btn-warning">edit</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <a href="{{ path('livre_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
</div>

{% endblock %}