{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}


    <div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Categories</h2>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Designation</th>
                            <th>Description</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                     {% for category in categories %}
                        <tr>
                             <td>{{ category.id }}</td>
                            <td>{{ category.designation }}</td>
                            <td>{{ category.description }}</td>
                             <td>
                                <a href="{{ path('categories_show', {'id': category.id}) }}" class="btn btn-info">show</a>
                                <a href="{{ path('categories_edit', {'id': category.id}) }}" class="btn btn-warning">edit</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <a href="{{ path('categories_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
