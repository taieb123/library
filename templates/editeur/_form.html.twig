<div class="col-xs-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="card-title">
                <div class="title">Form editeur</div>
            </div>
        </div>
        <div class="panel-body">
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            {{ form_start(form) }}

            <!-- Designiation field -->
            <div class="sub-title">{{ form_label(form.designation, '') }}</div>
            <div>
                {{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
            </div>

             <!-- Designiation field -->
            <div class="sub-title">{{ form_label(form.email, '') }}</div>
            <div>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

             <!-- Designiation field -->
            <div class="sub-title">{{ form_label(form.pays, '') }}</div>
            <div  class="form-group">
                {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>